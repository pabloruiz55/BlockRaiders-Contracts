{
  "name": "blockraiders-sc",
  "version": "0.0.1",
  "private": false,
  "homepage": "https://www.BlockRaiders.com",
  "description": "BlockRaiders smart contracts",
  "author": "Ferthereum",
  "license": "Unlicensed",
  "dependencies": {
    "hardhat": "2.13.0",
    "hardhat-deploy": "0.11.25",
    "hardhat-storage-layout": "0.1.7",
    "nethereum-codegen": "^1.0.24",
    "solc": "0.8.16"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@nomicfoundation/hardhat-toolbox": "2.0.2",
    "@nomiclabs/hardhat-solhint": "3.0.0",
    "@openzeppelin/contracts": "4.8.2",
    "@openzeppelin/contracts-upgradeable": "4.8.2",
    "@openzeppelin/hardhat-upgrades": "1.22.1",
    "@typechain/ethers-v5": "10.2.0",
    "@types/chai": "4.3.4",
    "@types/fs-extra": "11.0.1",
    "@types/memoizee": "0.4.8",
    "@types/node": "18.14.6",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "chai": "4.3.7",
    "dotenv": "16.0.3",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "hardhat-contract-sizer": "2.8.0",
    "hardhat-docgen": "1.3.0",
    "hardhat-erc1820": "0.1.0",
    "hardhat-preprocessor": "0.1.5",
    "hardhat-storage-layout-diff": "0.0.4",
    "husky": "8.0.3",
    "memoizee": "0.4.15",
    "prettier": "2.8.4",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "standard-version": "9.5.0",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.1",
    "typescript": "4.9.5"
  },
  "comments": {
    "dependencies": "hardhat-solhint and hardhat-prettier includes old versions, that's why specific dependencies are added"
  },
  "types": "types/index.d.ts",
  "files": [
    "/contracts",
    "/export"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "hardhat clean",
    "typechain": "TS_NODE_TRANSPILE_ONLY=true hardhat --config ./hardhat.base.config.ts typechain",
    "compile": "npm run typechain && hardhat compile && npm run nethereum",
    "compile-not-viair": "VIA_IR=false npm run typechain && VIA_IR=false hardhat compile",
    "coverage": "VIA_IR=false hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "solhint --config .solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint-fix": "eslint --fix --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --config .prettierrc --check \"**/*.{js,json,md,sol,ts}\"",
    "release": "standard-version",
    "security": "docker run -it -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "security-default": "echo \"solc-select install 0.8.16 && solc-select use 0.8.16 && cd project && slither --exclude-dependencies --exclude pragma,low-level-calls .\" | sudo docker run -i -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox",
    "slither": "slither .",
    "size-contracts": "hardhat size-contracts",
    "docgen": "hardhat docgen",
    "test": "hardhat test --typecheck",
    "report:gas": "REPORT_GAS=true hardhat test",
    "nethereum": "node ./scripts/nethereum-codegen.js"
  }
}
